{
    "ProjectID": "WebDude",
    "Description": "John's Goodness goes here",
    "Workflow":
    {
        "Input":
        {
            "Plugin": "TextFile",
            "Method": "runInput",
            "Source": "./Demo/Simple/house.txt",
            "Edit": "False",
            "Debug": "False"
        },
        "Analyzer":
        {
            "Plugin": "Nltk",
            "Method": "runSingleWords",
            "Edit": "False",
            "Debug": "False"
        },
        "Translator":
        {
            "Plugin": "Azure",
            "Method": "runTranslate",
            "Edit": "False",
            "Debug": "False"
        },
        "Output":
        {
            "Plugin": "HtmlFile",
            "Method": "runOutput",
            "Target": "./Demo/Simple/houseTranslated.html",
            "Edit": "False",
            "Debug": "False"
        }
    },
    "Plugin":
    [
        {
        "Name": "HtmlFile",
        "Type": "IO",
        "Version": "1.0.0",
        "Author" : "Cocoscats",
        "Description": "An IO plugin to handle simple HTML files",
        "Link": [],
        "Method":
        [
            {
                "Name": "runOutput",
                "Params": {}
            }
        ]
        },
        {
        "Name": "JsonFile",
        "Type": "IO",
        "Version": "1.0.0",
        "Author" : "Cocoscats",
        "Description": "An IO plugin to handle simple JSON files",
        "Link": [],
        "Method":
        [
            {
                "Name": "runOutput",
                "Params":
                {
                    "EncodeWithBase64": "False"
                }
            }
        ]
        },
        {
        "Name": "Quizlet",
        "Type": "IO",
        "Version": "1.0.0",
        "Author" : "Cocoscats",
        "Description": "An IO plugin that interacts with Quizlet web services",
        "Link": ["https://quizlet.com"],
        "Method":
        [
            {
                "Name": "runOutput",
                "Params":
                {
                }
            }
        ]
        },
        {
        "Name": "TextFile",
        "Type": "IO",
        "Version": "1.0.0",
        "Author" : "Cocoscats",
        "Description": "An IO plugin to handle simple text files",
        "Link": [],
        "Method":
        [
            {
                "Name": "runInput",
                "Params": {}
            },
            {
                "Name": "runOutput",
                "Params": {}
            }
        ]
        },
        {
        "Name": "Wikipedia",
        "Type": "IO",
        "Version": "1.0.0",
        "Author" : "Wikipedia and Sam Brightman",
        "Description": "An IO plugin to interact with the Wikipedia API",
        "Link": ["https://www.wikipedia.org/",
                 "https://github.com/sambrightman/wiki-api"],
        "Method":
        [
            {
                "Name": "runSearchInput",
                "Params":
                {
                    "SearchFor": "Eclipse",
                    "IncludeContent": "False",
                    "IncludeHeading": "True",
                    "IncludeSummary": "True",
                    "IncludeURL": "True",
                    "LimitResultsTo": "5",
                    "Locale": "en"
                }
            }
        ]
        },
        {
        "Name": "XmlFile",
        "Type": "IO",
        "Version": "1.0.0",
        "Author" : "Cocoscats",
        "Description": "An IO plugin to handle simple XML files",
        "Link": [],
        "Method":
        [
            {
                "Name": "runOutput",
                "Params": {}
            }
        ]
        },
        {
        "Name": "Nltk",
        "Type": "Analyzer",
        "Version": "1.0.0",
        "Author" : "NLTK",
        "Description": "An analyzer plugin that uses the NLTK library",
        "Links": ["http://www.nltk.org/"],
        "Method":
        [
            {
                "Name": "runSingleWords",
                "Params":
                {
                    "MinCharLength": "2",
                    "Percentage": "25",
                    "POS": ["ADJ", "CONJ", "NOUN", "PRON", "VERB"]
                }
            }
        ]
        },
        {
        "Name": "Azure",
        "Type": "Translator",
        "Version": "1.0.0",
        "Author" : "Microsoft",
        "Description": "A translation plugin that uses Microsoft's Azure Cloud Translator",
        "Links": ["https://azure.microsoft.com"],
        "Method":
        [
            {
                "Name": "runTranslate",
                "Params":
                {
                    "Credentials": "./Security/AzureCredentials.json",
                    "L1": "en",
                    "L2": "id",
                    "SearchOneByOne": "False"
                }
            }
        ]
        }
    ],
    "Database":
    {
        "Path": "./Database/Cocoscats.db",
        "Enable": "True",
        "Debug": "False",
        "Rebuild": "True"
    },
    "Web":
    {
        "Browser":
        [
            "default",
            "C:/Program Files (x86)/Mozilla Firefox/firefox.exe %s",
            "C:/Program Files (x86)/Google/Chrome/Application/chrome.exe %s",
            "default"
        ],
        "Debug": "True",
        "Host": "127.0.0.1",
        "Port": "12345",
        "RefreshCertificate": "False",
        "RefreshPassword": "False",
        "Reloader": "False",
        "UseAuthentication": "True",
        "UseHttps": "True"
    }
}
